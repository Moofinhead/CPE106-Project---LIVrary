<Window x:Class="LibraryManagementSystem.AdvancedBookSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Book Search" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0">
                <Button Style="{StaticResource IconButtonStyle}">
                    <TextBlock Text="â˜°" FontSize="24"/>
                </Button>
                <TextBlock Text="Book Search" 
                          VerticalAlignment="Center" 
                          Margin="15,0,0,0" 
                          FontSize="20" 
                          FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Search Section -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="30,20"
                CornerRadius="15"
                Padding="30">
            <StackPanel>
                <TextBlock Text="Advanced Search"
                          FontSize="24"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title Search -->
                    <StackPanel>
                        <TextBlock Text="Title"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <Border Background="#F5F5F5"
                                CornerRadius="10"
                                Padding="15,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ“š" 
                                         FontSize="16" 
                                         VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0"
                                        FontSize="14"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Author Search -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Author"
                                 FontSize="14"
                                 Margin="0,0,0,8"/>
                        <Border Background="#F5F5F5"
                                CornerRadius="10"
                                Padding="15,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="âœï¸" 
                                         FontSize="16" 
                                         VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        VerticalAlignment="Center"
                                        Margin="10,0,0,0"
                                        FontSize="14"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>

                <Button Content="Search"
                        Width="150"
                        Height="40"
                        Background="#3498db"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="2" 
                Background="White" 
                Margin="30,0,30,30"
                CornerRadius="15">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <TextBlock Text="Search Results"
                             FontSize="20"
                             FontWeight="SemiBold"/>
                    <TextBlock Text="Showing 156 of 10,000 maximum results"
                             HorizontalAlignment="Right"
                             Foreground="#666666"/>
                </Grid>

                <ItemsControl Grid.Row="1" Margin="0,20,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="200"
                                    Height="300"
                                    Background="#F5F5F5"
                                    CornerRadius="10"
                                    Margin="10">
                                <StackPanel Margin="15">
                                    <Border Width="120"
                                            Height="180"
                                            Background="#DDDDDD"
                                            CornerRadius="5"
                                            Margin="0,0,0,10"/>
                                    <TextBlock Text="Book Title"
                                             FontWeight="SemiBold"
                                             TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="Author Name"
                                             Foreground="#666666"
                                             TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>
    </Grid>
</Window> 