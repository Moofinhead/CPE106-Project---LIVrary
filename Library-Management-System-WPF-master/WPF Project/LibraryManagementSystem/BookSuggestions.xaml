<Window x:Class="LibraryManagementSystem.BookSuggestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Suggestions" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Background="White">
            <TextBlock Text="Personalized Recommendations"
                      VerticalAlignment="Center"
                      Margin="30,0"
                      FontSize="20"
                      FontWeight="Bold"/>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Based on Friends -->
            <Border Grid.Column="0" Background="White" CornerRadius="15" Margin="0,0,20,0">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="12" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Friend Recommendations" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#3498db" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="ðŸ‘¥" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Based on History -->
            <Border Grid.Column="1" Background="White" CornerRadius="15" Margin="0,0,20,0">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="8" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Based on History" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#2ecc71" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="ðŸ“š" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- New Releases -->
            <Border Grid.Column="2" Background="White" CornerRadius="15">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="5" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="New Releases" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#e74c3c" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="ðŸ†•" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Recommendations Grid -->
        <ScrollViewer Grid.Row="2" Margin="30,0,30,30">
            <StackPanel>
                <!-- Friend-based Recommendations -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Because your friends are reading..."
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>
                        
                        <WrapPanel>
                            <!-- Sample Books (1984, The Hobbit, Pride and Prejudice) -->
                            <Border Width="200"
                                    Height="300"
                                    Background="#F5F5F5"
                                    CornerRadius="10"
                                    Margin="10">
                                <StackPanel Margin="15">
                                    <Border Width="120"
                                            Height="180"
                                            Background="#DDDDDD"
                                            CornerRadius="5"
                                            Margin="0,0,0,10"/>
                                    <TextBlock Text="1984"
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="George Orwell"
                                             Foreground="#666666"/>
                                    <TextBlock Text="3 friends reading"
                                             Foreground="#3498db"
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Repeat similar Border blocks for The Hobbit and Pride and Prejudice -->
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Genre-based Recommendations -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Because you like Science Fiction..."
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,20"/>
                        
                        <WrapPanel>
                            <!-- Sample Books (Dune, Foundation, Neuromancer) -->
                            <Border Width="200"
                                    Height="300"
                                    Background="#F5F5F5"
                                    CornerRadius="10"
                                    Margin="10">
                                <StackPanel Margin="15">
                                    <Border Width="120"
                                            Height="180"
                                            Background="#DDDDDD"
                                            CornerRadius="5"
                                            Margin="0,0,0,10"/>
                                    <TextBlock Text="Dune"
                                             FontWeight="SemiBold"/>
                                    <TextBlock Text="Frank Herbert"
                                             Foreground="#666666"/>
                                    <TextBlock Text="98% Match"
                                             Foreground="#2ecc71"
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Repeat similar Border blocks for Foundation and Neuromancer -->
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>