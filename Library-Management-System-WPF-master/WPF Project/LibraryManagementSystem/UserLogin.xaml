<Page x:Class="LibraryManagementSystem.UserLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:LibraryManagementSystem"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d"
      Title="User Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/yoab-anderson-IHC5LPAoGrs-unsplash (2).jpg" 
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Blur overlay -->
        <Rectangle Fill="#80000000" />

        <!-- Back Button -->
        <Button Content="←" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="40,40,0,0"
                Width="50" 
                Height="50"
                FontSize="24"
                x:Name="BtnBack" 
                Click="BtnBack_Click"
                Style="{StaticResource CircleButtonStyle}"/>

        <!-- Login Panel -->
        <Border x:Name="LoginPanel"
                Background="#CC2A2A2A"
                CornerRadius="20"
                Width="400"
                MaxHeight="500"
                Padding="40">
            
            <StackPanel>
                <TextBlock Text="Welcome Back"
                          FontSize="32"
                          FontWeight="Light"
                          Margin="0,0,0,40"
                          Foreground="White"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Email"
                          Foreground="#CCFFFFFF"
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBox x:Name="tbUserEmail"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,20"/>

                <TextBlock Text="Password"
                          Foreground="#CCFFFFFF"
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <PasswordBox x:Name="tbUserPass"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,40"/>

                <Button Content="LOGIN"
                        x:Name="BtnLogin"
                        Click="BtnLogin_Click"
                        Style="{StaticResource ModernButton}"/>

                <TextBlock Text="Don't have an account?"
                          Foreground="#CCFFFFFF"
                          TextAlignment="Center"
                          Margin="0,20,0,10"/>
                
                <Button Content="SIGN UP"
                        x:Name="BtnShowSignup"
                        Click="BtnShowSignup_Click"
                        Style="{StaticResource ModernButtonOutline}"/>

                <TextBlock x:Name="alertUser"
                          Foreground="#FFFF4444"
                          TextAlignment="Center"
                          Margin="0,20,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Signup Panel -->
        <Border x:Name="SignupPanel"
                Background="#CC2A2A2A"
                CornerRadius="20"
                Width="400"
                MaxHeight="500"
                Padding="40"
                Visibility="Collapsed">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Create Account"
                              FontSize="32"
                              FontWeight="Light"
                              Margin="0,0,0,40"
                              Foreground="White"
                              HorizontalAlignment="Center"/>

                    <TextBlock Text="Username"
                              Foreground="#CCFFFFFF"
                              Margin="0,0,0,10"
                              FontSize="14"/>
                    <TextBox x:Name="tbSignupUsername"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,20"/>

                    <TextBlock Text="Email"
                              Foreground="#CCFFFFFF"
                              Margin="0,0,0,10"
                              FontSize="14"/>
                    <TextBox x:Name="tbSignupEmail"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,20"/>

                    <TextBlock Text="Phone Number"
                              Foreground="#CCFFFFFF"
                              Margin="0,0,0,10"
                              FontSize="14"/>
                    
                    <!-- Country Code and Phone Number in one row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox x:Name="signupCountryCode"
                                 Width="100"
                                 Height="35"
                                 Margin="0,0,10,0"
                                 Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="+63 (PH)" IsSelected="True"/>
                            <ComboBoxItem Content="+1 (US)"/>
                            <ComboBoxItem Content="+44 (UK)"/>
                            <ComboBoxItem Content="+81 (JP)"/>
                        </ComboBox>
                        
                        <TextBox x:Name="tbSignupPhone"
                                Grid.Column="1"
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>

                    <TextBlock Text="Password"
                              Foreground="#CCFFFFFF"
                              Margin="0,0,0,10"
                              FontSize="14"/>
                    <PasswordBox x:Name="tbSignupPass"
                                Style="{StaticResource ModernPasswordBox}"
                                Margin="0,0,0,20"/>

                    <TextBlock Text="Confirm Password"
                              Foreground="#CCFFFFFF"
                              Margin="0,0,0,10"
                              FontSize="14"/>
                    <PasswordBox x:Name="tbSignupPassConfirm"
                                Style="{StaticResource ModernPasswordBox}"
                                Margin="0,0,0,40"/>

                    <!-- Replace with Simple CAPTCHA -->
                    <Border Background="#1A000000" 
                            BorderBrush="#3FFFFFFF"
                            BorderThickness="1"
                            CornerRadius="8"
                            Margin="0,10,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- CAPTCHA Display Area -->
                            <Border x:Name="captchaDisplay" 
                                    Height="60" 
                                    Margin="10"
                                    Background="#33FFFFFF">
                                <Canvas x:Name="captchaCanvas" Width="280" Height="60"/>
                            </Border>
                            
                            <!-- Input Area -->
                            <Grid Grid.Row="1" Margin="10,0,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="tbCaptchaInput"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="0,0,10,0"/>
                                
                                <!-- Add placeholder text using overlay TextBlock -->
                                <TextBlock IsHitTestVisible="False"
                                           Text="Enter the text above" 
                                           Foreground="#99FFFFFF"
                                           Margin="15,12,0,0" 
                                           FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=tbCaptchaInput}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <Button x:Name="btnRefreshCaptcha"
                                        Grid.Column="1"
                                        Content="↻"
                                        Width="40" 
                                        Height="40"
                                        FontSize="18"
                                        Click="BtnRefreshCaptcha_Click"
                                        Style="{StaticResource CircleButtonStyle}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <Button Content="SIGN UP"
                            x:Name="BtnSignup"
                            Click="BtnSignup_Click"
                            Style="{StaticResource ModernButton}"
                            Margin="0,0,0,20"/>

                    <TextBlock Text="Already have an account?"
                              Foreground="#CCFFFFFF"
                              TextAlignment="Center"
                              Margin="0,0,0,10"/>
                    
                    <Button Content="LOGIN"
                            x:Name="BtnShowLogin"
                            Click="BtnShowLogin_Click"
                            Style="{StaticResource ModernButtonOutline}"
                            Margin="0,0,0,20"/>

                    <TextBlock x:Name="alertSignup"
                              Foreground="#FFFF4444"
                              TextAlignment="Center"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
