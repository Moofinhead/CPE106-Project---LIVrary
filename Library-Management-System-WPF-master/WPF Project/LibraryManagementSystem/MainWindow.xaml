<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Library Management System"
        Loaded="Window_Loaded">

    <Grid x:Name="RootGrid">
        <!-- Animation Layer -->
        <Grid x:Name="AnimationLayer" Panel.ZIndex="2">
            <Grid.Background>
                <SolidColorBrush x:Name="AnimationBackground" Color="White"/>
            </Grid.Background>
            
            <TextBlock x:Name="WelcomeText"
                      Text="Welcome."
                      FontSize="72"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,-100,0,0"
                      Opacity="0">
                <TextBlock.RenderTransform>
                    <TranslateTransform/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <Image x:Name="AnimationLogo"
                   Width="200"
                   Height="200"
                   Opacity="0"
                   Source="/Images/icons8-user-100.png"/>
        </Grid>

        <!-- Close Button -->
        <Button Content="X" 
                Panel.ZIndex="3"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Width="30" 
                Height="30"
                Click="CloseButton_Click"
                Background="Red"
                Foreground="White"
                FontWeight="Bold"/>

        <!-- Content Frame -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden"
               Panel.ZIndex="1">
            <!-- Original content will be moved to HomePage.xaml -->
        </Frame>
    </Grid>
</Window>
