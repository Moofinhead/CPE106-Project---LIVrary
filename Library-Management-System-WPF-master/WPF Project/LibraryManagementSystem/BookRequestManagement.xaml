<Window x:Class="LibraryManagementSystem.BookRequestManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Book Request Management" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0">
                <Button Style="{StaticResource IconButtonStyle}">
                    <TextBlock Text="â˜°" FontSize="24"/>
                </Button>
                <TextBlock Text="Book Requests" 
                          VerticalAlignment="Center" 
                          Margin="15,0,0,0" 
                          FontSize="20" 
                          FontWeight="Bold"/>
            </StackPanel>

            <!-- Search Bar -->
            <Border Grid.Column="1" 
                    Background="#F5F5F5" 
                    CornerRadius="20" 
                    Margin="20,15"
                    Padding="15,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸ”" FontSize="16" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Padding="5"
                            FontSize="14"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pending Requests -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,20,0">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="12" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Pending Requests" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#FFA726" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="â³" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Approved Today -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="0,0,20,0">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="5" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Approved Today" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#4CAF50" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="âœ“" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Rejected -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}">
                <Grid Background="White" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="3" 
                                  FontSize="36" 
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Rejected Today" 
                                  FontSize="14" 
                                  Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Column="1" 
                            Background="#F44336" 
                            CornerRadius="50"
                            Width="50" Height="50"
                            Opacity="0.1">
                        <TextBlock Text="âœ•" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"
                                 FontSize="20"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Request List -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="15" 
                Margin="30,0,30,30">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Recent Requests"
                          FontSize="20"
                          FontWeight="SemiBold"
                          Margin="0,0,0,20"/>

                <DataGrid Grid.Row="1"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         GridLinesVisibility="None"
                         Background="Transparent"
                         BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="REQUEST ID" 
                                          Width="100"
                                          Binding="{Binding RequestId}"/>
                        <DataGridTextColumn Header="BOOK TITLE" 
                                          Width="*"
                                          Binding="{Binding BookTitle}"/>
                        <DataGridTextColumn Header="REQUESTED BY" 
                                          Width="150"
                                          Binding="{Binding UserName}"/>
                        <DataGridTextColumn Header="DATE" 
                                          Width="120"
                                          Binding="{Binding RequestDate}"/>
                        <DataGridTemplateColumn Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Approve"
                                                Width="90"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Background="#4CAF50"
                                                Foreground="White"
                                                BorderThickness="0"/>
                                        <Button Content="Reject"
                                                Width="90"
                                                Height="30"
                                                Background="#F44336"
                                                Foreground="White"
                                                BorderThickness="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window> 