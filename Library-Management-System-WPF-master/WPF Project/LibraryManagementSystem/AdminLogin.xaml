<Page x:Class="LibraryManagementSystem.AdminLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:LibraryManagementSystem"
      mc:Ignorable="d"
      Title="Admin Login">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/yoab-anderson-IHC5LPAoGrs-unsplash (2).jpg" 
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Blur overlay -->
        <Rectangle Fill="#80000000" />

        <!-- Back Button -->
        <Button Content="←" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="40,40,0,0"
                Width="50" 
                Height="50"
                FontSize="24"
                x:Name="BtnBack" 
                Click="BtnBack_Click"
                Style="{StaticResource CircleButtonStyle}"/>

        <!-- Main Content -->
        <Border Background="#CC2A2A2A"
                CornerRadius="20"
                Width="400"
                MaxHeight="500"
                Padding="40">
            
            <StackPanel>
                <TextBlock Text="Admin Login"
                          FontSize="32"
                          FontWeight="Light"
                          Margin="0,0,0,40"
                          Foreground="White"
                          HorizontalAlignment="Center"/>

                <TextBlock Text="Email"
                          Foreground="#CCFFFFFF"
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <TextBox x:Name="tbAdminEmail"
                        Style="{StaticResource ModernTextBox}"
                        Margin="0,0,0,20"/>

                <TextBlock Text="Password"
                          Foreground="#CCFFFFFF"
                          Margin="0,0,0,10"
                          FontSize="14"/>
                <PasswordBox x:Name="tbAdminPass"
                            Style="{StaticResource ModernPasswordBox}"
                            Margin="0,0,0,40"/>

                <Button Content="LOGIN"
                        x:Name="BtnLogin"
                        Click="BtnLogin_Click"
                        Style="{StaticResource ModernButton}"/>

                <TextBlock x:Name="alertAdmin"
                          Foreground="#FFFF4444"
                          TextAlignment="Center"
                          Margin="0,20,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
